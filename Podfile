# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'MVVM-Coordinator' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # For all version
  pod 'Alamofire'
  pod 'ObjectMapper'
  pod 'SVProgressHUD'

  # For rxSwift version
  pod 'RxSwift'
  pod 'RxCocoa'

  # Firebase SDK
  pod 'Firebase/Core'
  pod 'Firebase/DynamicLinks'
  pod 'Firebase/Messaging'
  pod 'Firebase/RemoteConfig'

  # Analytics
  pod 'Firebase/Analytics'
  pod 'Fabric'
  pod 'Crashlytics'

  target 'MVVM-CoordinatorTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'MVVM-CoordinatorUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end

